# ============================================================================
# WashedMCP Environment Configuration
# ============================================================================
# Copy this file to .env and customize as needed
# Environment variables override config file settings

# ============================================================================
# API Keys (Optional)
# ============================================================================

# Anthropic API key for function summarization
# Get your key at: https://console.anthropic.com/
# Used by summarizer.py to generate 1-line function descriptions
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ============================================================================
# Database Settings
# ============================================================================

# ChromaDB persistence path (legacy, use WASHEDMCP_PERSIST_PATH instead)
# Default: .washedmcp/chroma
CHROMA_PERSIST_PATH=./.washedmcp/chroma

# Modern config path (takes precedence over CHROMA_PERSIST_PATH)
# WASHEDMCP_PERSIST_PATH=.washedmcp/chroma

# Collection name for ChromaDB
# WASHEDMCP_COLLECTION_NAME=codebase

# Distance metric for similarity search (cosine, l2, ip)
# WASHEDMCP_DISTANCE_METRIC=cosine

# ============================================================================
# Indexer Settings
# ============================================================================

# Directories to skip during indexing (comma-separated)
# WASHEDMCP_SKIP_DIRS=node_modules,.git,__pycache__,.venv,venv,dist,build

# Batch size for database operations
# WASHEDMCP_BATCH_SIZE=5000

# Whether to skip summarization by default (true/false)
# WASHEDMCP_SKIP_SUMMARIZE=true

# ============================================================================
# Embedder Settings
# ============================================================================

# Embedding model name (from sentence-transformers)
# WASHEDMCP_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Expected embedding dimensions (for validation)
# WASHEDMCP_EMBEDDING_DIMENSIONS=384

# ============================================================================
# Summarizer Settings
# ============================================================================

# Model to use for summarization
# WASHEDMCP_SUMMARIZER_MODEL=claude-3-haiku-20240307

# Maximum summary length in characters
# WASHEDMCP_MAX_SUMMARY_LENGTH=100

# ============================================================================
# Search Settings
# ============================================================================

# Default number of results to return
# WASHEDMCP_DEFAULT_TOP_K=5

# Default context expansion depth
# WASHEDMCP_DEFAULT_DEPTH=1

# ============================================================================
# Output Settings
# ============================================================================

# Maximum lines of code to show in rich format
# WASHEDMCP_MAX_CODE_LINES=20

# ============================================================================
# Parser Settings
# ============================================================================

# Extension to language mapping (format: ".ext:language,.ext2:language2")
# WASHEDMCP_EXTENSION_LANGUAGES=.py:python,.js:javascript,.jsx:javascript,.ts:typescript,.tsx:typescript,.mjs:javascript,.cjs:javascript

# ============================================================================
# Debug Settings
# ============================================================================

# Enable debug mode
# WASHEDMCP_DEBUG=false

# Enable verbose output
# WASHEDMCP_VERBOSE=false
