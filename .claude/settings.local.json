{
  "permissions": {
    "allow": [
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_take_screenshot",
      "Bash(git remote set-url:*)",
      "Bash(git remote add:*)",
      "Bash(git remote:*)",
      "Bash(git remote remove:*)",
      "Bash(git rev-parse:*)",
      "Bash(npm run build:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(npm install)",
      "mcp__washedmcp__installMCPServer",
      "mcp__washedmcp__getMCPInstallationStatus",
      "mcp__washedmcp__listInstalledServers",
      "mcp__washedmcp__searchSmithery",
      "mcp__washedmcp__installFromSmithery",
      "mcp__washedmcp__executeOnServer",
      "mcp__Github_MCP__get_file_contents",
      "mcp__Github_MCP__list_issues",
      "mcp__Github_MCP__search_users",
      "mcp__Github_MCP__search_repositories",
      "mcp__washedmcp__listAllMCPServers",
      "mcp__washedmcp__analyzeAndExecute"
      
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "washedmcp"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__.*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/mcp_json_logger.py",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
